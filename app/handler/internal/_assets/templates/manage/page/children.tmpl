{{define "title"}}Page Children{{end}}

{{define "header"}}
Page Tool[<a href="/manage/page/{{ .Parent }}">Parent</a>]
        <button type="button" id="generateBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--primary">
        Update sequence
        </button>
